<%= form_for [@setlist, Song.new] do |f| %>
  <div>
    <%= f.label :title, "Song title:" %><br><br>
    <%= f.text_field :title, :maxlength => 28, :class => "TextInputField", :placeholder => "..." %>
  </div><br>
  <div>
    <%= f.label :minutes, "Minutes:" %><br><br>
    <%= f.number_field :minutes, :min => 0, :max => 1000, :class => "minField", :placeholder => "m" %>
  </div><br>
  <div>
    <%= f.label :seconds, "Seconds:" %><br><br>
    <%= f.number_field :seconds, :min => 0, :max => 59, :class => "secField", :placeholder => "s" %>
  </div><br>
  <%= f.submit "add song", :class => "submitButton" %>
<% end %>
