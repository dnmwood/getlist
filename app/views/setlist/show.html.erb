<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  </head>

    <!-- Data submission -->
  <body>
    <h1><%= @setlist.title %></h1>
      <%= render 'song' %><br>
      <div class="container">
          <table>


          <% @setlist.songs.each do |x| %>
            <tr><% if x.seconds < 10 %>

              <td><%= x.title %></td> <td class="song-duration"><%= "#{x.minutes}:0#{x.seconds}" %></td></tr>
            <% else %>
            <tr><td><%= x.title %></td> <td class="song-duration"><%= "#{x.minutes}:#{x.seconds}" %></td></tr>
            <% end %>
          <% end %>

          </table>

    <h2>Total Setlist duration:
      <% if @setlist.set_minutes == 0 && @setlist.set_seconds == 0 %>
      <%= "00:00" %>
      <% else %>
      <%= @setlist.set_minutes %>:<%= @setlist.set_seconds %></h2>
      <% end %>

      </div>
  </body>
</html>
