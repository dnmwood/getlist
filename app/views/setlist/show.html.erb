<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  </head>

    <!-- Data submission -->
  <body>
    <h1><%= @setlist.title %></h1>
      <%= render 'song' %>
      <div class="container">
        <ul class="list">
          <% @setlist.songs.each do |x| %>
            <% if x.seconds < 9 %>
          <%= x.title %> <%= "#{x.minutes}:0#{x.seconds}" %>
            <% else %>
          <%= x.title %> <%= "#{x.minutes}:#{x.seconds}" %><br><br>
            <% end %>
          <% end %>
          
    <h2>Total Setlist duration:
      <% if @setlist.set_minutes == 0 && @setlist.set_seconds == 0 %>
      <%= "00:00" %>
      <% else %>
      <%= @setlist.set_minutes %>:<%= @setlist.set_seconds %></h2>
      <% end %>
        </ul>
      </div>
  </body>
</html>
